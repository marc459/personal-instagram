{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "exclude": [
    ".vscode-test"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types",
    "src2/types"
  ],
  "include": [
    "./src/**/*"
  ]
}